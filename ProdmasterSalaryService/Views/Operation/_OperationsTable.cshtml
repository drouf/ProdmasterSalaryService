@model ProdmasterSalaryService.ViewModels.Operation.OperationModel
@for (int i = 0; i < Model.Operations.Count; i++)
{
    <tr class="clickable-row bg-gradient bg-opacity-25" data-href="">
        <td>@Model.Operations[i].Note</td>
        <td>@Model.Operations[i].Sum</td>
        <td>@Model.Operations[i].Paid.ToLocalTime()</td>
    </tr>
}