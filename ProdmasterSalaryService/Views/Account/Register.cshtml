@using ProdmasterSalaryService.ViewModels.Account
@model RegisterModel

@{
    var customSelectList = new SelectList(ViewBag.Custom, nameof(ProdmasterSalaryService.Models.Classes.Custom.DisanId), nameof(ProdmasterSalaryService.Models.Classes.Custom.Name), Model.DisanId);
}

<h2>Регистрация</h2>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="Name"></label><br />
        <div class="form-group mb-3">
            <select class="form-select" asp-for="@Model.DisanId" asp-items="@customSelectList"></select>
            <span class="text-danger" asp-validation-for="Name"></span>
            @* <input type="hidden" class="form-control" asp-for="DisanId" /> *@
        </div>
        <label asp-for="Login"></label><br />
        <div class="form-group mb-3">
            <input class="form-control" type="text" asp-for="Login" />
            <span class="text-danger" asp-validation-for="Login"></span>
        </div>
        <label asp-for="Password"></label><br />
        <div class="form-group mb-3">
            <input class="form-control" asp-for="Password" />
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
        <label asp-for="ConfirmPassword"></label><br />
        <div class="form-group mb-3">
            <input class="form-control" asp-for="ConfirmPassword" />
            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
        </div>
        <div>
            <input type="submit" value="Регистрация" class="btn btn-outline-dark" />
        </div>
    </div>
</form>
