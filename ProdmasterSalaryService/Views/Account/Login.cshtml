@using ProdmasterSalaryService.ViewModels.Account
@model LoginModel
@{
    ViewData["Title"] = "Вход на сайт";
}

<h1 class="mb-5 display-4">Вход на сайт</h1>
<a class="link-underline link-underline-opacity-50" asp-action="Register" asp-controller="Account">Регистрация</a>
<form asp-action="Login" asp-controller="Account" asp-route-returnUrl="@(ViewBag.ReturnUrl ?? "/")" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <label for="Login" asp-for="Login">Логин</label>
        <div class="form-group mb-3">
            <input class="form-control" type="text" asp-for="Login" />
            <span class="text-danger" asp-validation-for="Login"></span>
        </div>

        <label for="Password" asp-for="Password">Пароль</label>
        <div class="form-group mb-3">
            <input class="form-control" asp-for="Password" />
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Войти" class="btn btn-outline-dark" />
        </div>
    </div>
</form>
